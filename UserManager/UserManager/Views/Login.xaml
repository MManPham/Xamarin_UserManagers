<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserManager.Views.Login"
             Title="Login">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" 
                 Padding="20" 
                 BackgroundColor="#00A9E0" >
            <Image HorizontalOptions="Center"  x:Name="LogoXamarin"/>
            <StackLayout BackgroundColor="#33b5e5"  Spacing="30" Padding="20">
                <Entry x:Name="user_name"
                   TextColor="White"
                   Placeholder="User Name"
                   PlaceholderColor="LightGray"
                   />
                <Entry x:Name="Password" 
                   TextColor="White"
                   Placeholder="Password"
                   PlaceholderColor="LightGray"
                   IsPassword="True"/>
                <Button x:Name="submit" Text="login" BackgroundColor="White" Clicked="submit_Clicked" />
